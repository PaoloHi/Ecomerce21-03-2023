@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ml-auto">
    @if (SignInManager.IsSignedIn(User))
    {


        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Mi cuenta
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
            <li class="nav-item">
                <a class="nav-link text-dark" href="" >Hola, @UserManager.GetUserName(User)</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Accesos" asp-action="EditarPerfil" asp-route-id="@UserManager.GetUserId(User)">Editar Perfil</a>
            </li>
            <li><hr class="dropdown-divider"></li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Accesos" asp-action="CambiarPassword">Cambiar Contraseña</a>
            </li>
          </ul>
        </li>

        <li class="nav-white">
            <form id="logoutForm" method="post" class="form-inline" asp-controller="Accesos" asp-action="SalirAplicacion">
                <button type="submit" class="btn btn-danger nav-link">Salir</button>
            </form>
        </li>

    } else
    {
        <ul class="navbar-nav ml-auto">
    <li class="nav-white">
    <a class="nav-link text-white" asp-area="" asp-controller="Accesos" asp-action="Acceso">Acceso</a>
</li>
</ul>
    }

    
</ul>
